extends layout 

block content 

    h1 Author: #{author.name} 
    if author.lifespan 
        p #[strong Lifespan: ] #{author.lifespan}
    else if author.date_of_birth 
        p #[strong Date of birth: ] #{author.date_of_birth_formatted}
    else if author.date_of_death 
        p #[strong Date of death: ] #{author.date_of_death_formatted}
    else 
        p #[strong Lifespan: ] Unknown
    
    div(style='margin-left:20px;margin-top:20px')
        h4 Books 
        if author_books.length 
            dl 
                each book in author_books 
                    dt 
                        a(href=book.url) #{book.title}
                    dd #{book.summary}
        else 
            p This author has no books in the library.
    
    hr
    p 
        a(href=author.url+'/delete') Delete author